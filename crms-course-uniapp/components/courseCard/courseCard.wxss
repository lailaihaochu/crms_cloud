.course-card {
  border: 1px solid #ccc;
  border-radius: 5px;
  padding: 10px;
  margin: 10px;
  width: 250px;
}
.course-card image {
  width: 100%;
}
.course-title {
  font-size: 16px;
  margin-top: 10px;
}
.course-desc {
  margin-top: 5px;
  color: #666;
}
.course-price {
  margin-top: 5px;
  color: red;
}